@model MarketWeb.Models.TinDang

@{
    ViewData["Title"] = "Xác nhận xoá tin" + Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminTinDangs" asp-action="Index">Danh sách tin</a>
            <span class="breadcrumb-item active">Xác nhận xoá trang : @Model.Title</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Xác nhận xoá tin : @Model.Title</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.PostId</td>
                    </tr>
                    <tr>
                        <td>Tên tin:</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>Nội dung:</td>
                        <td>@Model.Contents</td>
                    </tr>
                    <tr>
                        <td>Nội dung ngắn:</td>
                        <td>@Model.Scontents</td>
                    </tr>
                    <tr>
                        <td>Hình ảnh:</td>
                        <td>
                            <img width="200" height="200" src="~/images/tindang/@Model.Thumb" alt="@Model.Title" />
                        </td>
                    </tr>
                    <tr>
                        <td>Published:</td>
                        <td>
                            @if (Model.Published)
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" checked="">
                                    <label for="switch-1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-2">
                                    <label for="switch-2"></label>
                                </div>
                            }
                        </td>
                        
                    </tr>
                    <tr>
                        <td>IsHot:</td>
                        <td>
                            @if (Model.IsHot)
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" checked="">
                                    <label for="switch-1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-2">
                                    <label for="switch-2"></label>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>IsNewfeed:</td>
                        <td>
                            @if (Model.IsNewfeed)
                            {
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-1" checked="">
                                        <label for="switch-1"></label>
                                    </div>
                            }
                            else
                            {
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-2">
                                        <label for="switch-2"></label>
                                    </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Ngày tạo:</td>
                        <td>@Model.CreatedDate</td>
                    </tr>

                    <tr>
                        <td>Tiêu đề:</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>MetaKey:</td>
                        <td>@Model.MetaKey</td>
                    </tr>
                    <tr>
                        <td>MetaDesc:</td>
                        <td>@Model.MetaDesc</td>
                    </tr>
                    <tr>
                        <td>Alias:</td>
                        <td>@Model.Alias</td>
                    </tr>
                    <tr>
                        <td>Tags:</td>
                        <td>@Model.Tags</td>
                    </tr>
                    <tr>
                        <td>Author:</td>
                        <td>@Model.Author</td>
                    </tr>
                    <tr>
                        <td>AccountId:</td>
                        <td>@Model.AccountId</td>
                    </tr>
                    <tr>
                        <td>Xác nhận xoá:</td>
                        <td>
                            <form asp-controller="AdminTinDangs" asp-action="Delete" asp-route-id="@Model.PostId">
                                <input type="hidden" asp-for="PostId" />
                                <input type="submit" value="Xác nhận xoá" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
