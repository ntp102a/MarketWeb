@model MarketWeb.Models.Order

<div class="modal-header">
    <h1 class="modal-title">Thông tin đơn hàng</h1>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Thông tin đơn hàng # @Model.OrderId</h1>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td class="text=dark font-weight-semibold">@Model.OrderId</td>
                        </tr>
                        <tr>
                            <td>Ngày mua hàng:</td>
                            <td>@Model.OrderDate</td>
                        </tr>
                        <tr>
                            <td>Khách hàng:</td>
                            <td>@Model.Customer.FullName</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại:</td>
                            <td>@Model.Customer.Phone</td>
                        </tr>
                        <tr>
                            <td>Địa chỉ:</td>
                            <td>@Model.Customer.Address</td>
                        </tr>
                        <tr>
                            <td>Tổng tiền:</td>
                            <td>@Model.TotalMoney.ToString("#,##0") VND</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-area="Admin" asp-controller="AdminOrders" asp-action="ChangeStatus" asp-route-id="@Model.">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Chọn trạng thái đơn hàng</label>
                        <select class="form-control" asp-for="TransactStatusId" asp-items="ViewBag.TrangThai">
                            <option value="0" disabled selected>Chọn trạng thái đơn hàng</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Đã thanh toán</label>
                <input asp-for="Paid" type="checkbox" />
                <span asp-validation-for="Paid" class="text-danger"></span>                
            </div>
            <div class="form-group">
                <label>Đơn hàng bị huỷ</label>
                <input asp-for="Deleted" type="checkbox" />
                <span asp-validation-for="Deleted" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Lưu thay đổi</button>
        </form>
    </div>
</div>


